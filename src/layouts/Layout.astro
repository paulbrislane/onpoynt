---
import '@fontsource-variable/noto-serif-jp'; //200 - 900
import '@fontsource-variable/noto-sans-jp'; // 100 - 900
import '../styles/global.css';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>On Poynt | Local Photography in Poynton, Cheshire East</title>
    <link rel="canonical" href="https://www.onpoynt.co.uk/" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Shared Description -->
    <meta
      name="description"
      content="Local photography from Poynton, Cheshire East — landscapes, town scenes, and seasonal details from the northwest of England."
    />
    <meta name="robots" content="index, follow, max-image-preview:large" />
    <meta name="author" content="Paul Brislane" />
    <meta name="generator" content="{Astro.generator}" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_GB" />
    <meta property="og:site_name" content="On Poynt" />
    <meta
      property="og:title"
      content="On Poynt | Local Photography in Poynton"
    />
    <meta
      property="og:description"
      content="Local photography from Poynton, Cheshire East — landscapes, town scenes, and seasonal details from the northwest of England."
    />
    <meta property="og:url" content="https://www.onpoynt.co.uk/" />
    <meta
      property="og:image"
      content="https://www.onpoynt.co.uk/og-image.jpg"
    />
    <meta
      property="og:image:alt"
      content="Landscape photograph of Poynton in Cheshire East"
    />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="On Poynt | Local Photography in Poynton, Cheshire East"
    />
    <meta
      name="twitter:description"
      content="Local photography from Poynton, Cheshire East — landscapes, town scenes, and seasonal details from the northwest of England."
    />
    <meta
      name="twitter:image"
      content="https://www.onpoynt.co.uk/og-image.jpg"
    />

    <!-- Icons -->
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="alternate icon" href="/favicon.ico" sizes="any" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <!-- Optional: preload hero (ensure correct file and size) -->
    <!-- <link rel="preload" as="image" href="/images/hero.webp" imagesrcset="/images/hero.webp 1x, /images/hero@2x.webp 2x" /> -->

    <!-- Structured Data (home page) -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "On Poynt",
        "url": "https://www.onpoynt.co.uk/",
        "inLanguage": "en-GB",
        "publisher": { "@type": "Person", "name": "Paul Brislane" }
      }
    </script>
  </head>

  <body class="bg-stone-900 text-stone-100 font-sans antialiased">
    <div class="content-grid">
      <slot />
    </div>
  </body>
</html>
